@page
@model LoginModel
@{
	ViewData["Title"] = "Conecte-se";
}

<div class="d-flex justify-content-center align-items-center min-vh-100 bg-light">
	<div class="col-md-5 col-lg-4">
		<div class="card shadow-lg border-0 rounded-4">
			<div class="card-body p-4">
				<h1 class="text-center mb-3 fw-bold">@ViewData["Title"]</h1>
				<h3 class="text-center text-muted mb-4">Acesse sua conta</h3>
				<h5 class="text-center text-muted mb-4">Conecte-se a uma conta já criada para acessá-la</h5>

				<form id="account" method="post">
					<div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

					<div class="mb-3">
						<label asp-for="Input.Email" class="form-label">
							<i class="bi bi-envelope-fill me-1"></i>Email
						</label>
						<input asp-for="Input.Email" class="form-control rounded-pill" autocomplete="username" aria-required="true" />
						<span asp-validation-for="Input.Email" class="text-danger"></span>
					</div>

					<div class="mb-3">
						<label asp-for="Input.Password" class="form-label">
							<i class="bi bi-lock-fill me-1"></i>Senha
						</label>
						<input asp-for="Input.Password" class="form-control rounded-pill" autocomplete="current-password" aria-required="true" />
						<span asp-validation-for="Input.Password" class="text-danger"></span>
					</div>

					<div class="form-check mb-3">
						<input class="form-check-input" asp-for="Input.RememberMe" />
						<label class="form-check-label" asp-for="Input.RememberMe">Lembre de mim neste dispositivo</label>
					</div>

					<button type="submit" class="btn btn-primary w-100 py-2 rounded-pill shadow-sm mb-3">
						<i class="bi bi-box-arrow-in-right me-1"></i>Conectar
					</button>

					<div class="text-center">
						<a asp-page="./ForgotPassword" class="d-block mb-1">Esqueci minha senha</a>
						<a asp-page="./Register" class="d-block mb-1">Registrar um novo usuário</a>
						<a asp-page="./ResendEmailConfirmation" class="d-block">Remandar a confirmação de email</a>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
