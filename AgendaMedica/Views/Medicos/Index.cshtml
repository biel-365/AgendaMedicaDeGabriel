@model IEnumerable<AgendaMedica.Models.Medico>

@{
	ViewData["Title"] = "Médicos";
}

<div class="container text-dark mt-5">
	<h1 class="text-center display-5 ">Cadastro de <span class="fw-bold">Médicos</span></h1>

	<p>
		<a asp-action="Create" class="btn btn-outline-dark w-25"> <i class="bi bi-plus-circle"></i>Médicos</a>
	</p>
	<table class="table table-light table-striped table-borderless">
		<thead>
			<tr>
				<th class="bg-primary">
					@Html.DisplayNameFor(model => model.Nome)
				</th>
				<th class="bg-primary">
					@Html.DisplayNameFor(model => model.CRM)
				</th>
				<th class="bg-primary">
					@Html.DisplayNameFor(model => model.Celular)
				</th>
				<th class="bg-primary">
					@Html.DisplayNameFor(model => model.Especialidade)
				</th>
				<th class="bg-primary">Ações</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Nome)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.CRM)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Celular)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Especialidade.Nome)
					</td>
					<td>
						<a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.MedicoId"> <i class="bi bi-pencil"></i>Editar</a>
						<a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.MedicoId"> <i class="bi bi-trash2"></i>Deletar</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
